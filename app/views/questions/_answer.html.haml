#answer
  -if @more
    -if @take
      -@next_question_url = question_path(@test.questions[(@question_number-1)], :test_id => @test.to_param, :question_number => @question_number, :take_id => @take.id)
    -else
      -@next_question_url = question_path(@test.questions[(@question_number-1)], :test_id => @test.to_param, :question_number => @question_number)
    
    #next
      %a.question_link.green.button{:href => '#'}Next question &gt;
      :javascript
        #{render :partial => 'shared/next_question', :locals => {:url => @next_question_url, :bound_link => '.question_link'}}
  %h4
    -if @response.correct
      Correct!
    - else
      Wrong :-(
  %p><
    = "The answer to the question "
    %strong<= @question.name
    is
    %strong
      - if @question.correct_response == Choice::TRUE
        true.
      - elsif @question.correct_response == Choice::FALSE
        false.
      - elsif @question.is_multiple_choice || @question.is_short_answer
        = @question.correct_choice.name
    -if @question.explanation
      %p{:style => 'padding:10px 0;'}= @question.explanation
    
%p= "#{@correct_response_count} of #{@response_count} people (#{@percentage_correct} percent) answered this correctly"

%p= "You're tk for #{@question_number-1}, and have #{@test.questions.size + 1 - @question_number} questions left."

-if @more
  %p
    %a.question_link{:href => '#'}Next question &gt;
  
- unless @more
  %p{:style => 'padding:10px 0;'} Thus endeth the test.
  %h5
    = link_to('View your results', individual_test_results_path(@test.id, @test.to_param, current_user.username, @take.id))
  
=render :partial => 'shared/comments', :locals => {:comment => @comment, :comments => @question.root_comments}