.row.sign_in
  .col-12.col-sm-10.col-md-8.col-lg-6.offset-lg-2
    %h2
      Editing
      %em
        = @test.name

    = render partial: 'form', locals: {form_url: test_path(@test)}

    .questions
      %h4{:style => 'padding:40px 0 5px 0;'}>
        This test's questions
        = link_to 'Add question', new_question_path(:test_id => @test.to_param), class: "btn btn-primary"

      -unless @test.questions.blank?
        %ol#questions
          -@test.questions.each do |q|
            %li
              %em
                "#{q.name}"
              %span
                [
                = link_to('Edit', edit_question_path(q, :test_id => @test.to_param))
                |
                = link_to('Delete', question_path(q, :test_id => @test.to_param), :method => :delete, :confirm => "For sure? That's permanente.")
                ]
              -unless q.description.blank?
                %div= q.description
